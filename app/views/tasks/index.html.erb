<div class="container">
  <div class="page-header">
    <h1>Tasks</h1>
  </div>
  <%= form_for @task do |f| %>
    <div class="form-controls col-md-6">
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="form-group row">
      <div class="col-md-4">
        <%= f.submit class: "btn btn-info" %>
      </div>
  </div>
  <% end %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Completed?</th>
        <th></th>
        <th></th>
      </tr>
  </table>
</div>
