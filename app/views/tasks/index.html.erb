<div class="container">
  <div class="page-header">
    <h1>Tasks</h1>
  </div>
  <%= form_for @task do |f| %>
    <div class="form-controls col-md-6">
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="form-group row">
      <div class="col-md-4">
        <%= f.submit class: "btn btn-info" %>
      </div>
  </div>
  <% end %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Completed?</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <% if task.completed == false %>
          <tr>
            <td><%= task.description %></td>
            <td>
              <%= link_to 'Yes', task_path(task, completed: true), method: :patch %>
            </td>
            <td>
              <%= link_to add_priority_path(task) do %>
                <i class="fa fa-arrow-up"></i>
              <% end %>
            </td>
            <td>
              <%= link_to subtract_priority_path(task) do %>
                <i class="fa fa-arrow-down"></i>
              <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <h2>Completed Tasks</h2>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <% if task.completed == true %>
          <tr>
            <td><%= task.description %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
</div>
